{% set title = 'Gradient Topbar' %}

{% block css %}
    <link rel="stylesheet" href="/plugins/jsvectormap/jsvectormap.min.css">
{% endblock %}

{% block content %}

{{ include('partials/page-title.html.twig', {'title': 'Gradient Topbar'}) }}

<div class="row">
    <div class="col-12">
