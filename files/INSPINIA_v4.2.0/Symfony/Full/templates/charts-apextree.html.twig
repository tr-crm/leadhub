{% extends 'layouts/vertical.html.twig' %}

{% set title = 'ApexTree Apexcharts' %}

{% block css %}{% endblock %}

{% block content %}

{{ include('partials/page-title.html.twig', {'subtitle': 'Charts', 'title': 'ApexTree'}) }}

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Right to left</h4>
    </div>

    <div class="card-body">
        <div dir="ltr">
            <div id="right-to-left" style="margin: 0 auto;"></div>
        </div>
    </div>
    <!-- end card body-->
</div>
<!-- end card -->

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Bottom</h4>
    </div>

    <div class="card-body">
        <div dir="ltr">
            <div id="bottom-tree" style="margin: 0 auto;"></div>
        </div>
    </div>
    <!-- end card body-->
</div>
<!-- end card -->

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Top to bottom</h4>
    </div>

    <div class="card-body">
        <div dir="ltr">
            <div id="top-tree" style="margin: 0 auto;"></div>
        </div>
    </div>
    <!-- end card body-->
</div>
<!-- end card -->

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Collapse Expand</h4>
    </div>

    <div class="card-body">
        <div dir="ltr">
            <div id="collapse-expand" style="margin: 0 auto;"></div>
        </div>
    </div>
    <!-- end card body-->
</div>
<!-- end card -->

{% endblock %}

{% block script %}

    <!-- Apex Chart js -->
    <script src="/plugins/apextree/apextree.min.js"></script>

    <!-- Apex Chart Heatmap Demo js -->
    <script src="/js/pages/chart-apextree.js"></script>

{% endblock %}