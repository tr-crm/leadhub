@page "/skin-minimal"
@rendermode InteractiveServer
@inject IJSRuntime JsRuntime;

<div class="container-fluid">

	<PageBreadcrumb Title="Minimal Skin"/>

	<div class="row">
		<div class="col-12">
			<div class="alert alert-info alert-bordered border-start border-info d-flex align-items-center gap-2 mb-3">
				<i class="ti ti-info-circle fs-20"></i>
				<div>
					Set <code>data-skin="minimal"</code> in the <code>&lt;html&gt;</code> tag to use the Minimal theme.
				</div>
			</div>
		</div>
	</div>

</div>

@code {

	protected override async Task OnAfterRenderAsync(bool firstRender)
	{
		if (firstRender)
		{
			await JsRuntime.InvokeVoidAsync("updateHtmlAttributes", "data-skin", "minimal");
			await JsRuntime.InvokeVoidAsync("updateHtmlAttributes", "data-menu-color", "gray");
			await JsRuntime.InvokeVoidAsync("loadConfig");
			await JsRuntime.InvokeVoidAsync("loadApps");
		}
	}

}