@page "/charts-apextree"
@rendermode InteractiveServer
@inject IJSRuntime JsRuntime;

<div class="container-fluid">

    <PageBreadcrumb Title="ApexTree" SubTitle="Charts" />

    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Right to left</h4>
        </div>

        <div class="card-body">
            <div dir="ltr">
                <div id="right-to-left" style="margin: 0 auto;"></div>
            </div>
        </div>
        <!-- end card body-->
    </div>
    <!-- end card -->

    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Bottom</h4>
        </div>

        <div class="card-body">
            <div dir="ltr">
                <div id="bottom-tree" style="margin: 0 auto;"></div>
            </div>
        </div>
        <!-- end card body-->
    </div>
    <!-- end card -->

    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Top to bottom</h4>
        </div>

        <div class="card-body">
            <div dir="ltr">
                <div id="top-tree" style="margin: 0 auto;"></div>
            </div>
        </div>
        <!-- end card body-->
    </div>
    <!-- end card -->

    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Collapse Expand</h4>
        </div>

        <div class="card-body">
            <div dir="ltr">
                <div id="collapse-expand" style="margin: 0 auto;"></div>
            </div>
        </div>
        <!-- end card body-->
    </div>
    <!-- end card -->

</div>
<!-- container -->

@code {
    private IJSObjectReference? _module;
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _module = await JsRuntime.InvokeAsync<IJSObjectReference>("import", "./js/pages/chart-apextree.js");
            await JsRuntime.InvokeVoidAsync("loadChartsApextree");
            await JsRuntime.InvokeVoidAsync("loadConfig");
            await JsRuntime.InvokeVoidAsync("loadApps");
        }
    }
}