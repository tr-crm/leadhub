@page "/tables-datatables-child-rows"
@rendermode InteractiveServer
@inject IJSRuntime JsRuntime;

<div class="container-fluid">

	<PageBreadcrumb Title="Child Row" SubTitle="DataTables"/>

	<div class="row justify-content-center">
		<div class="col-xxl-10">
			<div class="card">
				<div class="card-header justify-content-between">
					<h4 class="card-title"> Example </h4>
					<a href="https://datatables.net/examples/api/row_details" target="_blank"
					   class="icon-link icon-link-hover link-primary fw-semibold">View Docs <i
							class="ti ti-arrow-right bi align-middle fs-lg"></i></a>
				</div>

				<div class="card-body">
					<table id="child-rows-data" class="table table-striped dt-responsive align-middle mb-0">
						<thead class="thead-sm text-uppercase fs-xxs">
						<tr>
							<th></th>
							<th>Company</th>
							<th>Symbol</th>
							<th>Price</th>
							<th>Change</th>
							<th>Volume</th>
							<th>Market Cap</th>
						</tr>
						</thead>
					</table>
				</div> <!-- end card-body-->
			</div> <!-- end card-->
		</div>
	</div>

</div>

@code {
	private IJSObjectReference? _module;

	protected override async Task OnAfterRenderAsync(bool firstRender)
	{
		if (firstRender)
		{
			_module = await JsRuntime.InvokeAsync<IJSObjectReference>("import", "./js/pages/datatables-child-rows.js");
			await JsRuntime.InvokeVoidAsync("loadDataTableChildRows");
			await JsRuntime.InvokeVoidAsync("loadConfig");
			await JsRuntime.InvokeVoidAsync("loadApps");
		}
	}

}