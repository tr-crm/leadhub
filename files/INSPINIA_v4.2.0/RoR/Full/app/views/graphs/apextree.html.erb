<% @title = "ApexTree Apexcharts" %>

    <div class="container-fluid">

        <%= render 'layouts/partials/page_title', sub_title: "Charts",page_title: "ApexTree" %>

        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Right to left</h4>
            </div>

            <div class="card-body">
                <div dir="ltr">
                    <div id="right-to-left" style="margin: 0 auto;"></div>
                </div>
            </div>
            <!-- end card body-->
        </div>
        <!-- end card -->

        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Bottom</h4>
            </div>

            <div class="card-body">
                <div dir="ltr">
                    <div id="bottom-tree" style="margin: 0 auto;"></div>
                </div>
            </div>
            <!-- end card body-->
        </div>
        <!-- end card -->

        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Top to bottom</h4>
            </div>

            <div class="card-body">
                <div dir="ltr">
                    <div id="top-tree" style="margin: 0 auto;"></div>
                </div>
            </div>
            <!-- end card body-->
        </div>
        <!-- end card -->

        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Collapse Expand</h4>
            </div>

            <div class="card-body">
                <div dir="ltr">
                    <div id="collapse-expand" style="margin: 0 auto;"></div>
                </div>
            </div>
            <!-- end card body-->
        </div>
        <!-- end card -->

    </div>

<% content_for :javascript do %>    
  <%= vite_javascript_tag 'js/pages/chart-apextree.js' %>
<% end %>